<StatusMessage Message="@StatusMessage" />
<MudText Typo="Typo.h5" GutterBottom="true">Recovery codes</MudText>
<MudAlert Severity="Severity.Warning" Class="mb-4">
    <MudText Typo="Typo.body2"><strong>Put these codes in a safe place.</strong></MudText>
    <MudText Typo="Typo.body2">
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </MudText>
</MudAlert>

<MudPaper Class="pa-4" Elevation="0" Style="background-color: var(--mud-palette-background-grey)">
    <MudGrid>
        @foreach (var recoveryCode in RecoveryCodes)
        {
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.button" Style="font-family: monospace;">@recoveryCode</MudText>
            </MudItem>
        }
    </MudGrid>
</MudPaper>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
