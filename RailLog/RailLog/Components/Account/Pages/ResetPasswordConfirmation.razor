@page "/Account/ResetPasswordConfirmation"

<PageTitle>Reset password confirmation - RailLog</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Large" Color="Color.Success" Style="font-size: 100px;" />
    <MudText Typo="Typo.h4" Class="mt-4">Reset password confirmation</MudText>
    <MudAlert Severity="Severity.Success" Variant="Variant.Filled" Class="mt-4">
        Your password has been reset.
    </MudAlert>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="Account/Login" Class="mt-8">Click here to log in</MudButton>
</MudContainer>
