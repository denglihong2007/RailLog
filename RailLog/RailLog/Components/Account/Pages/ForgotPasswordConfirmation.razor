@page "/Account/ForgotPasswordConfirmation"

<PageTitle>Forgot password confirmation - RailLog</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
    <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Large" Color="Color.Primary" Style="font-size: 100px;" />
    <MudText Typo="Typo.h4" Class="mt-4">Forgot password confirmation</MudText>
    <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="mt-4">
        Please check your email to reset your password.
    </MudAlert>
    <MudButton Variant="Variant.Text" Color="Color.Primary" Href="Account/Login" Class="mt-8">Back to Login</MudButton>
</MudContainer>
