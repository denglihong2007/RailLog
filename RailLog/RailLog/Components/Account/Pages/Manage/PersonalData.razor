@page "/Account/Manage/PersonalData"

@using Microsoft.AspNetCore.Identity
@using RailLog.Data

@inject UserManager<ApplicationUser> UserManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Personal Data - RailLog</PageTitle>

<MudText Typo="Typo.h5" GutterBottom="true">Personal Data</MudText>
<StatusMessage />

<MudGrid>
    <MudItem xs="12" sm="8" md="6">
        <MudText Typo="Typo.body1" Class="mb-4">Your account contains personal data that you have given us. This page allows you to download or delete that data.</MudText>
        <MudAlert Severity="Severity.Error" Class="mb-6">
            <MudText Typo="Typo.body2"><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></MudText>
        </MudAlert>

        <div class="d-flex flex-wrap gap-2">
            <form action="Account/Manage/DownloadPersonalData" method="post">
                <AntiforgeryToken />
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Download</MudButton>
            </form>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Href="Account/Manage/DeletePersonalData">Delete</MudButton>
        </div>
    </MudItem>
</MudGrid>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var user  = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
        }
    }
}
