@page "/Account/InvalidPasswordReset"

<PageTitle>Invalid password reset - RailLog</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
    <MudIcon Icon="@Icons.Material.Filled.ErrorOutline" Size="Size.Large" Color="Color.Error" Style="font-size: 100px;" />
    <MudText Typo="Typo.h4" Class="mt-4">Invalid password reset</MudText>
    <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mt-4">
        The password reset link is invalid.
    </MudAlert>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="Account/ForgotPassword" Class="mt-8">Try Again</MudButton>
</MudContainer>
